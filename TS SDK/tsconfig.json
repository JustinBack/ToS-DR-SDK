{
  "typeAcquisition": {
    "enable": true
  },
  "compilerOptions": {
    "module": "CommonJS",
    "lib": [ "es6" ],
    "target": "ES6",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "outDir": "build/",
    "moduleResolution": "node",
    "rootDir": "src/",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "typings/"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
